@model EventEaseApp.Models.Venue

<h2>Delete Venue</h2>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["SuccessMessage"]
    </div>
}


@if (!ViewData.ModelState.IsValid)
{
    foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <div class="alert alert-danger">
            @error.ErrorMessage
        </div>
    }
}

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.VenueName)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VenueName)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Locations)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Locations)</dd>
        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>
    </dl>
</div>

<dt class="col-sm-2">
    Venue Image
</dt>
<dd class="col-sm-10">
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Venue Image" width="200" height="200" style="object-fit:cover; border-radius: 12px;" />
    }
    else
    {
        <span>No Image Available</span>
    }
</dd>

<form asp-action="Delete">
    <input type="hidden" asp-for="VenueId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Cancel</a>
</form>
